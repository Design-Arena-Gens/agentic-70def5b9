rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /company-logos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && "manageCompanies" in request.auth.token.permissions;
    }

    match /resumes/{userId}/{file=**} {
      allow read: if request.auth != null && (request.auth.uid == userId || "manageRecruiters" in request.auth.token.permissions);
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
